<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/menuitemcolor"
            >
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhile"
                android:layout_weight="2">
                <Button
                    android:id="@+id/btn_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc"
                    android:layout_gravity="center"
                    android:background="@color/colorWhile"
                    android:drawableLeft="@drawable/ic_swap_vert_black_24dp"
                    android:textColor="@color/bgToolbar"
                    android:gravity="center"
                     android:textAllCaps="false">

                </Button>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhile"
                android:layout_weight="2">
                <Button
                    android:id="@+id/btn_sapxep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sắp xếp"
                    android:layout_gravity="center"
                    android:background="@color/colorWhile"
                    android:drawableLeft="@drawable/ic_sort_black_24dp"
                    android:textColor="@color/bgToolbar"
                    android:gravity="center"
                    android:textAllCaps="false">

                </Button>

            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/bgToolbar"></View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhile"
                android:layout_weight="3">
                <Button
                    android:id="@+id/btn_ThayDoiTrangThaiRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhile"
                    android:drawableLeft="@drawable/ic_view_list_black_24dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                </Button>

            </FrameLayout>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_hienthisanphamtheodanhmuc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>