<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_dientu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                android:id="@+id/imgKhuyenMaiDienTu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/backgroundplashscreen"
                android:scaleType="centerCrop">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/backgroundplashscreen"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                           />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tranparenBlack"
                            android:text="TOP 150 SKU Bán Chạy Trong Tháng"
                            android:textColor="@color/colorWhile"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:padding="30dp"
                            android:gravity="center"
                            ></TextView>
                    </FrameLayout>
                  <FrameLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_marginLeft="5dp"
                      android:layout_marginBottom="5dp">
                      <ImageView
                          android:layout_width="match_parent"
                          android:src="@drawable/backgroundplashscreen"
                          android:layout_height="120dp"
                          android:scaleType="centerCrop"
/>
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@color/tranparenBlack"
                          android:text="TOP SmartPhone Chất Lượng Giá Rẻ"
                          android:textColor="@color/colorWhile"
                          android:layout_gravity="center"
                          android:textAlignment="center"
                          android:padding="30dp"
                          android:gravity="center"
                          ></TextView>

                  </FrameLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"

                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/backgroundplashscreen"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tranparenBlack"
                            android:text="TOP Camera"
                            android:textColor="@color/colorWhile"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:padding="30dp"
                            android:gravity="center"
                            ></TextView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/backgroundplashscreen"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"

/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tranparenBlack"
                            android:text="TOP TV có màn hình lớn"
                            android:textColor="@color/colorWhile"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:padding="30dp"
                            android:gravity="center"
                            ></TextView>
                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_sp1"
                        android:layout_width="match_parent"
                        android:src="@drawable/backgroundplashscreen"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"

                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/txt_sp1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/tranparenBlack"
                        android:text="TOP TV có màn hình lớn"
                        android:textColor="@color/colorWhile"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:padding="30dp"
                        android:gravity="center"
                        ></TextView>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_sp2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/backgroundplashscreen" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/txt_sp2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/tranparenBlack"
                        android:text="TOP TV có màn hình lớn"
                        android:textColor="@color/colorWhile"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:padding="30dp"
                        android:gravity="center"
                        ></TextView>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_sp3"
                        android:layout_width="match_parent"
                        android:src="@drawable/backgroundplashscreen"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"

                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/txt_sp3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/tranparenBlack"
                        android:text="TOP TV có màn hình lớn"
                        android:textColor="@color/colorWhile"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:padding="30dp"
                        android:gravity="center"
                        ></TextView>
                </FrameLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thương Hiệu Lớn"
                android:layout_margin="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_thuonghieulon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm mới về"
                android:layout_margin="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_sanphammoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>